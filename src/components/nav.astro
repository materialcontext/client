---
const subscribe = () => {
    return alert("Subscribe")
}

const signin = () => {
    return alert("Sign-In")
}
---
<nav>
    <a href="/" class="w-1/3 border-0 hover:border-0"><img class="h-8 w-8" src="/logo00.svg" alt="logo"/></a>
    <h2 class="text-center w-1/3">Material Context</h2>
    <ul class="w-1/3 flex space-x-1 justify-end">
        <li><button class= "button-color subscribe" onclick="subscribe">Subscribe</button></li>
        <li><button class= "button-white signin" onclick="signin">Sign-In</button></li>
    </ul>
</nav>
<script>
    // subscribe button
    document.querySelector(".subscribe").addEventListener("click", () => {
        alert("Subscribe")
    })

    // sign-in button
    document.querySelector(".signin").addEventListener("click", () => {
        alert("Sign-In")
    })

    //hide on scroll down, show on scroll up
    var prevScrollpos = window.pageYOffset;
    window.onscroll = function() {
        var currentScrollPos = window.pageYOffset;
        if (prevScrollpos > currentScrollPos) {
            document.querySelector("nav").style.top = "0";
        } else {
            document.querySelector("nav").style.top = "-100px";
        }
        prevScrollpos = currentScrollPos;
    }
</script>